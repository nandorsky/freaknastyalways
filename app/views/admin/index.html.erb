    <!-- MetisMenu CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-sb-admin-2/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-sb-admin-2/dist/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-sb-admin-2/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="http://blackrockdigital.github.io/startbootstrap-sb-admin-2/bower_components/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="http://blackrockdigital.github.io/startbootstrap-sb-admin-2/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-4 col-md-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-users fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= @users.count %></div>
                                    <div>Users</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comment-o fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= @comments.count %></div>
                                    <div>Comments</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-pencil fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= @articles.count %></div>
                                    <div>Submissions</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-pencil fa-fw"></i> Submissions
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>User</th>
                                                    <th>Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% @articles.each do |article| %>
                                                <tr>
                                                    <td><%= article.title %></td>
                                                    <td><%= article.user.email %></td>
                                                    <td><%= article.created_at %></td>
                                                    <td>
                                                    	<a href="<%= edit_article_path(article) %>" class="btn btn-primary btn-circle">
                                                    		<i class="fa fa-pencil"></i>
                            							</a>
                            							<button type="button" class="btn btn-danger btn-xs btn-circle">
                                                    		<i class="fa fa-times"></i>
                            							</button>
                            							<%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
                                                    </td>
                                                </tr>
                                             <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                </div>
                               
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-pencil fa-fw"></i> Submissions
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <ul class="timeline">
                            	<% @articles.each do |article| %>
	                                <li class="<%= cycle("", "timeline-inverted", name: "articles") %>">
	                                    <div class="timeline-badge primary"><i class="fa fa-question"></i>
	                                    </div>
	                                    <div class="timeline-panel">
	                                        <div class="timeline-heading">
	                                            <h4 class="timeline-title"><%= article.title %></h4>
                                                Votes: <%= article.score %>
	                                            <p><small class="text-muted"><i class="fa fa-clock-o"></i> <%= time_ago_in_words(article.created_at) %> ago by <%= article.user.email %></small>
	                                            </p>
	                                        </div>
	                                        <div class="timeline-body">
	                                            <p><%= article.url %></p>
	                                        </div>
	                                    </div>
	                                </li>
	                             <% end %>
                            </ul>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-8 -->
                <div class="col-lg-4">
                	 <div class="chat-panel panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-comments fa-fw"></i>
                            Recent Comments
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <ul class="chat">

                            <% @comments.each do |comment| %>
                                 <li class="left clearfix">
                                    <span class="chat-img pull-left">
                                        <img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle" />
                                    </span>
                                    <div class="chat-body clearfix">
                                        <div class="header">
                                            <strong class="primary-font"><%= comment.user.email %></strong>
                                            <small class="pull-right text-muted">
                                                <i class="fa fa-clock-o fa-fw"></i> <%= time_ago_in_words(comment.created_at) %> ago
                                            </small>
                                        </div>
                                        <p>
                                           <%= comment.comment %>
                                        </p>
                                    </div>
                                </li>
                             <% end %>
                            </ul>
                        </div>
                        <!-- /.panel-body -->
                        <div class="panel-footer">

                        </div>
                        <!-- /.panel-footer -->
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-users fa-fw"></i> Most Active Users
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="list-group">

                            <% @users.each do |user| %>
                                <a href="#" class="list-group-item">
                                    <i class="fa fa-question fa-fw"></i> <%= user.email %>
                                    <span class="pull-right text-muted small"><em>32 comments, 14 posts</em>
                                    </span>
                                </a>
                            <% end %>

                            </div>
                            <!-- /.list-group -->
                            <a href="#" class="btn btn-default btn-block">View All Alerts</a>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->



                </div>
                <!-- /.col-lg-4 -->
            </div>
            <!-- /.row -->

