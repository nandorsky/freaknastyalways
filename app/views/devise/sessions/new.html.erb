<!-- Custom styles for this template -->
<style type="text/css">
    body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #eee;
    }

    .navbar-inverse {
      display: none;
    }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin") do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Log In</h2>

    <%= f.label :email, :class => "sr-only" %>
    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address"  %>

    <%= f.label :password, autocomplete: "off", :class => "sr-only"  %><br />
    <%= f.password_field :password, :class => "form-control", autocomplete: "off", :placeholder => "Password" %>


  <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>

  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
