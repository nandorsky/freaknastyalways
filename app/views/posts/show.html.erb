<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>URL:</strong>
  <%= @post.url %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Type:</strong>
  <%= @post.type_of_post %>
</p>

<h4>Post a Comment:</h4>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
     <%= f.hidden_field :post_id, :value => params[:id] %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

    
	   <% @comments.each do |post| %>
        <p><%= post.user_id %></p>
        <p><%= post.comment %></p>
    <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
